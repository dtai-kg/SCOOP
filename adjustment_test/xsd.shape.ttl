@prefix ex: <http://example.com/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/NodeShape/transport> a sh:NodeShape ;
    sh:name "transport" ;
    sh:node <http://example.com/NodeShape/None>,
        <http://example.com/NodeShape/transport/bus> ;
    sh:nodeKind sh:IRI ;
    sh:targetClass ex:transport .

<http://example.com/NodeShape/transport/bus> a sh:NodeShape ;
    sh:name "bus" ;
    sh:node <http://example.com/NodeShape/None>,
        <http://example.com/NodeShape/transport/bus/route> ;
    sh:nodeKind sh:IRI ;
    sh:property <http://example.com/PropertyShape/transport/bus/id> ;
    sh:targetClass ex:bus .

<http://example.com/NodeShape/transport/bus/route> a sh:NodeShape ;
    sh:name "route" ;
    sh:node <http://example.com/NodeShape/None>,
        <http://example.com/NodeShape/transport/bus/route/stop> ;
    sh:nodeKind sh:IRI ;
    sh:targetClass ex:route .

<http://example.com/NodeShape/transport/bus/route/stop> a sh:NodeShape ;
    sh:name "stop" ;
    sh:nodeKind sh:IRI ;
    sh:property <http://example.com/PropertyShape/transport/bus/route/stop> ;
    sh:targetClass ex:stop .

<http://example.com/PropertyShape/transport/bus/id> a sh:PropertyShape ;
    sh:datatype xsd:positiveInteger ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "id" ;
    sh:path ex:id .

<http://example.com/PropertyShape/transport/bus/route/stop> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:minCount 2 ;
    sh:name "stop" ;
    sh:path ex:stop ;
    sh:property <http://example.com/PropertyShape/transport/bus/route/stop/id> .

<http://example.com/PropertyShape/transport/bus/route/stop/id> a sh:PropertyShape ;
    sh:datatype xsd:positiveInteger ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "id" ;
    sh:path ex:id .

