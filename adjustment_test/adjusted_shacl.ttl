@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/NodeShape/transport/bus> a sh:NodeShape ;
    sh:name "bus" ;
    sh:node <http://example.com/NodeShape/transport/bus/route> ;
    sh:nodeKind sh:IRI ;
    sh:targetClass <http://vocab.org/transit/terms/Stop> .

<http://example.com/NodeShape/transport/bus/route> a sh:NodeShape ;
    sh:name "route" ;
    sh:node <http://example.com/NodeShape/transport/bus/route/stop> ;
    sh:nodeKind sh:IRI .

<http://example.com/NodeShape/transport/bus/route/stop> a sh:NodeShape ;
    sh:name "stop" ;
    sh:nodeKind sh:IRI ;
    sh:property <http://example.com/PropertyShape/transport/bus/route/stop> .

<http://example.com/PropertyShape/transport/bus/route/stop> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:minCount 2 ;
    sh:name "stop" ;
    sh:path rdfs:label ;
    sh:property <http://example.com/PropertyShape/transport/bus/route/stop/id> .

<http://example.com/PropertyShape/transport/bus/route/stop/id> a sh:PropertyShape ;
    sh:datatype xsd:int ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "id" ;
    sh:path <http://vocab.org/transit/terms/stop> .

