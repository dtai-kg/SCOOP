@prefix ex: <http://example.com/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

ex:PersonShape a sh:NodeShape ;
    sh:property [ sh:in ( ex:Yellow ) ;
            sh:path ex:color ],
        [ sh:nodeKind sh:IRI ;
            sh:path ex:worksFor ] ;
    sh:targetClass ex:Person .

