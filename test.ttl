@prefix ex: <http://example.com/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/NodeShape/student> a sh:NodeShape ;
    sh:name "student" ;
    sh:node <http://example.com/NodeShape/studentType> ;
    sh:nodeKind sh:IRI ;
    sh:targetClass ex:student .

<http://example.com/NodeShape/studentType> a sh:NodeShape ;
    sh:name "studentType" ;
    sh:property <http://example.com/PropertyShape/studentType/grade>,
        <http://example.com/PropertyShape/studentType/id> .

<http://example.com/PropertyShape/studentType/grade> a sh:PropertyShape ;
    sh:datatype xsd:integer ;
    sh:maxCount 1 ;
    sh:maxInclusive 20 ;
    sh:minCount 1 ;
    sh:minInclusive 0 ;
    sh:name "grade" ;
    sh:path ex:grade .

<http://example.com/PropertyShape/studentType/id> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:name "id" ;
    sh:path ex:id .

